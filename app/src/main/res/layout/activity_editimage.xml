<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StyleActivity">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:background="@color/white"
            android:padding="20dp">

            <ImageView
                android:id="@+id/pro_img"
                android:layout_width="149dp"
                android:layout_height="114dp"
android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:src="@drawable/baseline_supervised_user_circle_24" />

            <TextView
                android:id="@+id/pro_name"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:layout_marginLeft="-68dp"
                android:layout_marginTop="500dp"
                android:layout_marginBottom="15dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/slide"
            android:padding="20dp">


        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginBottom="10dp"
            android:clickable="false"
            app:counterTextColor="@color/black"
            android:hint="Full Name"
            app:startIconDrawable="@drawable/name"
            android:tooltipText="Full Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:backgroundTint="@color/cardview_light_background"
                android:enabled="true"
                android:inputType="text"
                app:counterTextColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterTextColor="@color/black"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:hint="Phone Number"
            app:startIconDrawable="@drawable/phone"
            android:tooltipText="Phone">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/number"
                android:layout_height="69dp"
                app:counterTextColor="@color/black"
                android:inputType="phone"
                android:backgroundTint="@color/cardview_light_background"
                android:enabled="true"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:counterTextColor="@color/black"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:hint="Address"
            app:startIconDrawable="@drawable/home"
            android:tooltipText="Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:backgroundTint="@color/cardview_light_background"
                android:enabled="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/save"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/baseline_save_as_24"
            android:elevation="10dp"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:paddingStart="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Save"

            android:textColor="@color/white"
            android:textStyle="bold" />





    </LinearLayout>
</ScrollView>